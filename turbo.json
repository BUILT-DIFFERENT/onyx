{
  "$schema": "https://turbo.build/schema.json",
  "envMode": "strict",
  "globalDependencies": [".env"],
  "globalEnv": [
    "CONVEX_*",
    "CLERK_*",
    "STORAGE_*",
    "JAVA_HOME",
    "ANDROID_HOME",
    "ANDROID_SDK_ROOT"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "env": ["CONVEX_*", "CLERK_*", "STORAGE_*", "JAVA_HOME", "ANDROID_HOME", "ANDROID_SDK_ROOT"],
      "outputs": ["dist/**", ".next/**", "build/**", "app/build/**"]
    },
    "typecheck": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "typecheck:quick": {
      "outputs": []
    },
    "test": {
      "dependsOn": ["build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "env": ["CONVEX_*", "CLERK_*", "STORAGE_*", "JAVA_HOME", "ANDROID_HOME", "ANDROID_SDK_ROOT"],
      "outputs": ["coverage/**"]
    },
    "e2e": {
      "dependsOn": ["build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "env": ["CONVEX_*", "CLERK_*", "STORAGE_*"],
      "outputs": ["playwright-report/**", "test-results/**"]
    },
    "lint": {
      "outputs": []
    },
    "lint:quick": {
      "outputs": []
    },
    "lint:fix": {
      "outputs": []
    },
    "ktlint": {
      "outputs": []
    },
    "detekt": {
      "outputs": []
    },
    "format": {
      "outputs": []
    },
    "format:check": {
      "outputs": []
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    }
  }
}
